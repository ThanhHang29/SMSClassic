<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ttth.smsclassic.MainActivity">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/green"
                    android:layout_weight="1"
                    android:layout_height="0dp">
        <ImageView android:layout_width="50dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"
                   android:id="@+id/imgSend"
                   android:background="@drawable/state_send"
                   android:layout_height="50dp"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tvSMS"
                  android:layout_toRightOf="@id/imgSend"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="25dp"
                  android:text="@string/sms"
                  android:textColor="@color/white"
                  style="?android:attr/textAppearanceLarge"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="50dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="10dp"
                   android:id="@+id/imgCreateSMS"
                   android:background="@drawable/state_reply"
                   android:layout_alignParentRight="true"
                   android:layout_height="45dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_alignParentBottom="true"
                      android:orientation="horizontal"
                      android:layout_height="60dp">
            <Button android:layout_width="0dp"
                    android:id="@+id/btnReceived"
                    android:text="Received"
                    android:textColor="@color/white"
                    style="?android:attr/textAppearanceLarge"
                    android:background="@color/green"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            <Button android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:id="@+id/btnSent"
                    android:text="Sent"
                    style="?android:attr/textAppearanceLarge"
                    android:background="@color/green"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

        </LinearLayout>


    </RelativeLayout>
    <FrameLayout android:layout_width="match_parent"
                 android:id="@+id/flFragment"
              android:background="@drawable/shape_item"
              android:layout_weight="3"
              android:layout_height="0dp">

    </FrameLayout>

</LinearLayout>
